<h2>Je viens en train</h2>

<%= simple_form_for(@train, data: {turbo: false}) do |f| %>
      <%= f.input :nom %>
      <%= f.input :ville_depart %>
      <%= f.input :ville_arrivee %>
      <%= f.input :date_aller, as: :date, html5: true %>
      <%= f.input :heure_aller, as: :time, html5: true %>
      <%= f.input :date_retour, as: :date, html5: true %>
      <%= f.input :heure_retour, as: :time, html5: true %>
      <%= f.input :note %>
      <%= f.button :submit%>
    <% end %>
